<% if @posts.any? %>
  <% @posts.each do |post| %>
    <%= link_to post.comment, post_path(post) %>
    <%= link_to "Edit #{post.comment}", edit_post_path(post) %>
    <%= link_to "Delete #{post.comment}", post_path(post), method: :delete %>
  <% end %>
<% else %>
  <h1>No posts yet!</h1>
<% end %>

<a href="posts/new">Add a post</a>
